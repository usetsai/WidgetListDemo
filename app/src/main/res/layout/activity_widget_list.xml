<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/pin_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pin_widget"
        app:layout_constraintEnd_toStartOf="@+id/pin_shortcut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pin_shortcut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pin_shortcut"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pin_widget" />

    <Button
        android:id="@+id/update_name_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update_name_widget"
        app:layout_constraintTop_toBottomOf="@+id/pin_widget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/add_shortcut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add_shortcut"
        app:layout_constraintTop_toBottomOf="@+id/update_name_widget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>